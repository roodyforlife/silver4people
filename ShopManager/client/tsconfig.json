{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src", // включает все файлы .tsx из директории src и ее поддиректорий
    "src/store/UserStore/**/*.tsx", // добавляет все файлы .tsx из папки src/store/UserStore и ее поддиректорий
    "src/Auth/styles/Login.module.css"
  ],
  "exclude": [
    "node_modules" // исключает папку node_modules из компиляции TypeScript
  ]
}